# Michael Hirsch May 2014
# command reference: http://matplotlib.org/1.3.1/users/customizing.html#matplotlibrc-sample
# DPI/PPI reference: http://en.wikipedia.org/wiki/List_of_displays_by_pixel_density
# put this file in the directory your code is in -- this overrides the global settings for matplotlib
# tested with Python 3.4 and matplotlib1 1.3.1 on Linux

#backend      : qt4agg
#backend.qt4  : PySide

figure.dpi   : 110
figure.facecolor: white
figure.edgecolor: black

figure.subplot.left : 0.0875
figure.subplot.right: 0.975
figure.subplot.bottom: 0.085
figure.subplot.top  : 0.925
figure.subplot.wspace: 0.2
figure.subplot.hspace: 0.2

image.interpolation: none
image.origin: lower

axes.formatter.limits : -3, 3 # use scientific notation if log10 of the axis range is smaller than the first or larger than the second
axes.formatter.use_mathtext : True
